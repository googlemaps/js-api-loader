  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "target": "ES6",
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "e2e/**/*.ts"],
  "exclude": ["node_modules", "./dist"]
}
